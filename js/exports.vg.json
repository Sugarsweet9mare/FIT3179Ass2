{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/Sugarsweet9mare/FIT3179Ass2/main/js/ne_110m_admin_0_countries.topojson",
      "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
          }
    },
    "config":{
        "background": "null"
    },
    "vconcat":[
        {
            "title": "Yearly Export of Coffee",
            "width": 800,
            "height": 400,
            "layer":[
                {
                    "data": {
                        "url": "https://raw.githubusercontent.com/Sugarsweet9mare/FIT3179Ass2/main/js/ne_110m_admin_0_countries.topojson",
                        "format": {
                            "type": "topojson",
                            "feature": "ne_110m_admin_0_countries"
                            }
                    },
                    "mark":{"type": "geoshape", "fill": "lightgray", "stroke": "white"}
  
                },
            
                {
                    "data": {
                        "url": "https://raw.githubusercontent.com/Sugarsweet9mare/FIT3179Ass2/main/js/ne_110m_admin_0_countries.topojson",
                        "format": {
                            "type": "topojson",
                            "feature": "ne_110m_admin_0_countries"
                            }
                    },
                    
                    "transform": [
                        
                        {
                            "lookup": "properties.NAME",
                            "from": {
                                "data": {
                                "url": "https://raw.githubusercontent.com/Sugarsweet9mare/FIT3179Ass2/main/data/domestic-consumption_editted.csv"
                                },
                                "key": "exports",
                                "fields": ["y1990","y1991","y1992","y1993","y1994","y1995","y1996","y1997","y1998","y1999","y2000","y2001","y2002","y2003","y2004","y2005","y2006","y2007","y2008","y2009","y2010","y2011","y2012","y2013","y2014","y2015","y2016","y2017","y2018"]
                            }
                        }
                
                    ],
                    "projection": {
                        "type": "equirectangular"
                    },
                    "mark": {
                        "type": "geoshape"
                        },
                    "encoding": {
                        "color": {
                        "field": "Yearly Exports",
                        "type": "quantitative",
                        "scale": {"type": "linear"}
                        },
                        "tooltip": [
                        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
                        {"field": "Yearly Exports", "type": "quantitative"}
                        ]
                    }
                }
            ]
            

        },

        {
            "title": "Line Chart to filter based on Year",
            "data": {
                "url": "https://raw.githubusercontent.com/Sugarsweet9mare/FIT3179Ass2/main/data/total-exports.csv"
            },
            "width": 800,
            "height": 200,
            "mark": "line",
            "params": [
                {
                    "name": "brush",
                    "select": {"type": "point", "on": "click", "nearest": true,"encodings": ["x"]}
                }
            ],
            "encoding": {
                "x":{
                    "field": "Year",
                    "type": "ordinal"
                },
                "y":{
                    "field": "Total",
                    "type": "quantitative",
                    "title": "Total Exports"
                }
            }
        },

        {
            "title": "Domestic Consumption of Coffee",
            "width": 800,
            "height": 400,

            "layer":[
                {
                    "data": {
                        "url": "https://raw.githubusercontent.com/Sugarsweet9mare/FIT3179Ass2/main/js/ne_110m_admin_0_countries.topojson",
                        "format": {
                            "type": "topojson",
                            "feature": "ne_110m_admin_0_countries"
                            }
                    },
                    "mark":{"type": "geoshape", "fill": "lightgray", "stroke": "white"}
  
                },
                {
                    "data": {
                        "url": "https://raw.githubusercontent.com/Sugarsweet9mare/FIT3179Ass2/main/js/ne_110m_admin_0_countries.topojson",
                        "format": {
                            "type": "topojson",
                            "feature": "ne_110m_admin_0_countries"
                            }
                    },
                    
                    "transform": [
                        {
                        "lookup": "properties.NAME",
                        "from": {
                            "data": {
                            "url": "https://raw.githubusercontent.com/Sugarsweet9mare/FIT3179Ass2/main/data/domestic-consumption_test.csv"
                            },
                            "key": "domestic_consumption",
                            "fields": ["test"]
                        }
                        },
        
                        {"calculate": "datum.test", "as": "Domestic Consumption"}
                    ],
                    "projection": {
                        "type": "equirectangular"
                    },
                    "params": [
                        {
                            "name": "paintbrush",
                            "select": {"type": "point", "on": "mouseover"}
                        }
                    ],
                    "mark": {
                        "type": "geoshape"
                        },
                    "encoding": {
                        "color": {
        
                                "field": "Domestic Consumption",
                                "type": "quantitative",
                                "scale": {"type": "linear", "scheme": "purples"}
        
        
                        },
        
                        "tooltip": [
                        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
                        {"field": "Domestic Consumption", "type": "quantitative"}
                        ]
                    }
                }
                
            ] 
        }    
    ]
}   

  