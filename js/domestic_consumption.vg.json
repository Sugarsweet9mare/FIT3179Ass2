{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Domestic Consumption of Coffee",
  "width": 800,
  "height": 600,
  "data": {
    "url": "js/ne_110m_admin_0_countries.topojson",
    "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
  },
  "params": [
    {
      "name": "Consumption_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 22250,
        "step": 1000,
        "name": "Minimum Consumption: "
      }
    }
  ],
  "transform": [
    
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "data/domestic-consumption_test.csv"
        },
        "key": "domestic_consumption",
        "fields": ["test"]
      }
    },
    {"filter": "datum.test > Consumption_Above"},
    {"calculate": "datum.test", "as": "Domestic Consumption"}
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "field": "Domestic Consumption",
      "type": "quantitative",
      "scale": {"type": "linear"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Domestic Consumption", "type": "quantitative"}
    ]
  }

}
