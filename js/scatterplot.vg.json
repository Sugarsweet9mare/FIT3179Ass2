{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/Sugarsweet9mare/FIT3179Ass2/main/data/scatter_doctored.csv"},
    "width": 600,
    "height": 600,
    "background": "#dadada",
    "config": {"font": "Gerial"},
    "layer": [
      {
        "mark": "circle",
        "params": [
          {
            "name": "country_select",
            "select": {"type": "point", "fields": ["countries"]},
            "bind": {
              "input": "select",
              "options": [
                "All",
                "Angola",
                "Brazil",
                "Burundi",
                "Ecuador",
                "Indonesia",
                "Madagascar",
                "Papua New Guinea",
                "Peru",
                "Rwanda",
                "Dominican Republic",
                "Tanzania",
                "Cameroon",
                "Colombia",
                "Costa Rica",
                "CÃ´te d'Ivoire",
                "Democratic Republic of Congo",
                "El Salvador",
                "Ethiopia",
                "Ghana",
                "Guatemala",
                "Guinea",
                "Honduras",
                "India",
                "Kenya",
                "Mexico",
                "Nepal",
                "Nicaragua",
                "Panama",
                "Sierra Leone",
                "Thailand",
                "Togo",
                "Uganda",
                "Viet Nam"
              ],
              "name": "Country: "
            }
          }
        ],
        "encoding": {
          "y": {"field": "opening_stock", "type": "quantitative", "title": "Opening Stock"},
          "x": {"field": "crop_export", "type": "quantitative", "title": "Crop Export"},
          "tooltip": [
              {"field": "countries", "type": "nominal", "title": "Country"},
              {"field": "opening_stock", "type": "quantitative", "title": "Opening Stock"},
              {"field": "crop_export", "type": "quantitative", "title": "Crop Export"}
            ],
          "color": {
            "condition": {
              "param": "country_select",
              "field": "countries",
              "type": "nominal",
              "scale": {"scheme": "inferno"},
              "legend": null
            },
            "value": "grey"
          },
          "size": {"value": 100},
          "opacity": {
            "condition": {"param": "country_select", "value": 0.8},
            "value": 0.2
          }
        }
      }
    ]
  }